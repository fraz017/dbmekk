<%= form_for @event, remote: true do |f| %>
  <div class="form-inputs">
    <label>Name</label>
    <%= f.text_field :title, class: "form-control", required: true, placeholder: "Title" %>
    <label>Email</label>
    <%= f.email_field :email, class: "form-control", required: true, placeholder: "Email Address" %>
    <label>Phone Number</label>
    <%= f.text_field :phone_number, class: "form-control", required: true, placeholder: "12345678" %>
    <label>License No</label>
    <%= f.text_field :license_no, class: "form-control", required: true, placeholder: "AA-55555" %>
    <label>Description</label>
    <%= f.text_field :description, class: "form-control", placeholder: "Description" %>
    <%= f.hidden_field :start, as: :hidden, value: Date.today, class: 'form-control input-sm start_hidden' %>
    <%= f.hidden_field :end, as: :hidden, value: Date.today, class: 'form-control input-sm end_hidden' %>
  </div>
  <br/>
  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-success" %>
  </div>
<% end %>
<script type="text/javascript">
  $(document).ready(function(){
    $("#event_license_no").mask('AA-00000');;
    $("#event_phone_number").mask('00000000');;
  });
</script>